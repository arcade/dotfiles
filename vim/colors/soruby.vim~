set background=dark
hi clear
if exists("syntax_on")
  syntax reset
endif

let g:colors_name = "SORuby"

hi link htmlTag                     xmlTag
hi link htmlTagName                 xmlTagName
hi link htmlEndTag                  xmlEndTag

highlight Normal                    guifg=#E6E1DC guibg=#111111 
highlight Cursor                    guifg=#000000 ctermfg=0 guibg=#FFFFFF ctermbg=15	
highlight CursorLine                guibg=#121212 ctermbg=233 cterm=NONE

highlight Comment                   guifg=#d7af87 ctermfg=180
highlight Constant                  guifg=#5fafaf ctermfg=73
highlight Define                    guifg=#d7875f ctermfg=173
highlight Error                     guifg=#ffd75f ctermfg=221 guibg=#870000 ctermbg=88
highlight Function                  guifg=#ffd75f ctermfg=221 gui=NONE cterm=NONE
highlight Identifier                guifg=#5fafaf ctermfg=73 gui=NONE cterm=NONE
highlight Include                   guifg=#d7875f ctermfg=173 gui=NONE cterm=NONE
highlight PreCondit                 guifg=#d7875f ctermfg=173 gui=NONE cterm=NONE
highlight Keyword                   guifg=#d7875f ctermfg=173 cterm=NONE
highlight LineNr                    guifg=#777777 ctermfg=159 guibg=#000000
highlight Number                    guifg=#87af5f ctermfg=107
highlight PreProc                   guifg=#8787af ctermfg=103
highlight Search                    guifg=NONE ctermfg=NONE guibg=#262626 ctermbg=235 gui=italic cterm=underline
highlight Statement                 guifg=#d7875f ctermfg=173 gui=NONE cterm=NONE
highlight String                    guifg=#87af5f ctermfg=107
highlight Title                     guifg=#ffffff ctermfg=15
highlight Type                      guifg=#d75f5f ctermfg=167 gui=NONE cterm=NONE
highlight Visual                    guibg=#5f5f87 ctermbg=60

highlight DiffAdd                   guifg=#c0c0c0 ctermfg=7 guibg=#5faf5f ctermbg=71
highlight DiffDelete                guifg=#c0c0c0 ctermfg=7 guibg=#5f0000 ctermbg=52
highlight Special                   guifg=#d75f5f ctermfg=167 

highlight rubyBlockParameter        guifg=#ffffff ctermfg=15
highlight rubyClass                 guifg=#ffffff ctermfg=15
highlight rubyConstant              guifg=#d75f5f ctermfg=167
highlight rubyInstanceVariable      guifg=#d7d7ff ctermfg=189
highlight rubyInterpolation         guifg=#87af5f ctermfg=107
highlight rubyLocalVariableOrMethod guifg=#d7d7ff ctermfg=189
highlight rubyPredefinedConstant    guifg=#d75f5f ctermfg=167
highlight rubyPseudoVariable        guifg=#ffd75f ctermfg=221
highlight rubyStringDelimiter       guifg=#afaf5f ctermfg=143
highlight rubyIdentifier            guifg=#afaf5f ctermfg=143
highlight rubyOperator              guifg=#afaf5f ctermfg=143
highlight rubyInclude               guifg=#ee6969
highlight rubyConditional           guifg=#d8f881
highlight rubyOptionalDo            guifg=#d8f881
highlight rubyConditionalModifier   guifg=#d8f881
highlight rubyControl               guifg=#d8f881
highlight rubyClassVariable         guifg=#54b2d9
highlight rubyAttribute             guifg=#becbf5
highlight rubyEval                  guifg=#88d1f0
highlight rubyPseudoVariable        guifg=#b5e4f7
highlight rubyPredifinedIdentifier  guifg=red
highlight xmlTag                    guifg=#d7af5f ctermfg=179
highlight xmlTagName                guifg=#d7af5f ctermfg=179
highlight xmlEndTag                 guifg=#d7af5f ctermfg=179
highlight mailSubject               guifg=#d7af5f ctermfg=107
highlight mailHeaderKey             guifg=#ffd75f ctermfg=221
highlight mailEmail                 guifg=#87af5f ctermfg=107 gui=italic cterm=underline
highlight rubyModule                guifg=#ee6969
highlight rubyDefine                guifg=#ee6969
highlight SpellBad                  guifg=#D70000 ctermfg=160 ctermbg=NONE cterm=underline
highlight SpellRare                 guifg=#D75F87 ctermfg=168 guibg=NONE ctermbg=NONE gui=underline cterm=underline
highlight SpellCap                  guifg=#d7d7ff ctermfg=189 guibg=NONE ctermbg=NONE gui=underline cterm=underline
highlight MatchParen                guifg=#ffffff ctermfg=15 guibg=#005f5f ctermbg=23
highlight NonText                   guifg=#5f5f5f ctermfg=59
highlight SpecialKey                guifg=#5f5f5f ctermfg=59
